@model ResturantFinalProject.ViewModels.CategoryDetailsViewModel
@using Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Delete Category";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Delete Category</h1>
    <p class="mb-4">Are you sure you want to delete this category? This action cannot be undone.</p>

    <!-- Delete Confirmation Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@Model.Name</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-center align-middle" width="100%" cellspacing="0">
                    <tbody>
                        <tr>
                            <th><label asp-for="Name"></label></th>
                            <td>@Model.Name</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Action Buttons -->
                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-danger mx-2">Confirm Delete</button>
                    <a asp-action="IndexDashboard" class="btn btn-secondary mx-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</div>
<!-- /.container-fluid -->